#---- qalc
usd2jpy() {
    usd="$1"
    qalc -t $usd USD to JPY
}

jpy2usd() {
    jpy="$1"
    qalc -t $jpy JPY to USD
}

#---- python-wrapped
function pyp() {
    cmd_str="print($@)"
    python -c $cmd_str
}

# Temperature conversion
C2F() { pyp "$1 * 1.8 + 32" }
F2C() { pyp "($1 - 32) * 0.5556" }


