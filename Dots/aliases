# Path stuff
# ==========
alias pathof='readlink -e'
function pathcp() {
    # Copy path to $1.
    #   eg: pathcp setup.py
    #       /home/evan-cushing/Cloud/Projects/fart/setup.py
    pth=`readlink -en $1`;
    # $pth actually has a return-character at the end, so we translate that out.
    echo $pth | tr -d "[:cntrl:]" | xclip -sel clip;
    #echo $pth | xclip -sel clip
}


# Permissions
