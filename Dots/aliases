function pipigpu(){
    # Packages
    gpu_pkgs='cupy gpustat nvitop triton'
    if nvidia-smi &>/dev/null; then
        pip install -U $gpu_pkgs
        echo 'CUDA AVAILABLE; downloading cuda builds!'
    fi
}


