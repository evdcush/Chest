# GIT/GITHUB
# ==========
# Hoarding
# --------
function hurl {
ARGS="$@" HPATH="$PATH_HOARD_INBOX" python - <<END
import os
import json

ku = os.environ['ARGS'].split(' ')
if len(ku) > 1:
    key_short, url = ku
else:
    url = ku.pop()
    key_short = 'r'
keys = dict(r="repos", o="orgs", u="users")
key = keys[key_short]
inbox_path = str(os.environ['HPATH'])

#==== Read hoard JSON file
with open(inbox_path, 'r') as ibx_file:
    ibx = json.load(ibx_file)

#==== Update values and write to hoard json file
if url in ibx[key]:
    print(f'{url} already in {key}!')
else:
    ibx[key].append(url)
    with open(inbox_path, 'w') as ibx_file:
        json.dump(ibx, ibx_file)
END
}

#
getstars(){
    USER="$1"
    TOKEN="$TOKEN_GH_PUB"
    starred --username "$USER" --sort --token "$TOKEN" > "$USER.stars.md"
}

