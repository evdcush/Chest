#==== package info
alias api="apt-cache show"

# Apt-fast
#=========================
apf='sudo apt-fast'
alias af="$apf"
alias afu="$apf update"
alias afg="$apf upgrade"
alias afug="$apf update && $apf upgrade"
alias afi="$apf install"
alias afr="$apf remove"
alias afrp="$apf remove --purge"
alias afa="$apf autoremove"
alias afc="$apf clean"
alias affu="$apf full-upgrade"
alias afl="apt-fast list"
alias afs="apt-fast search"
alias afshow="apt-fast show"


# Python stuff
#=========================
alias pipistd="pip install -U pip setuptools wheel && \
pip install -U numpy scipy sklearn matplotlib chainer gym \
chainerrl sympy pip-autoremove ipython jupyter notebook \
jupyter_contrib_nbextensions bs4 jrnl thefuck docutils rst2html5-tools \
sphinx sphinx-rtd-theme johnnydep bidict art termdown cheat cookiecutter \
gitup archivenow"

alias pipupdate="pip list --outdated --format=freeze \
| grep -v '^\-e' \
| cut -d = -f 1  \
| xargs -n1 pip install -U"

alias pyenv-uninstall="pyenv uninstall $1 -y && rm .python-version"

