# Shell
#-------------------------------------
#==== file and dir stuff
alias md="mkdir -p"
alias cdb="cd -"

#==== list stuff
alias h="history"
alias ldot="ls -d --group-directories-first .*"
alias lk="ls -1FSshX --file-type"
alias l="ls --group-directories-first -X"

#==== replacements
#alias diff="colordiff -u"

