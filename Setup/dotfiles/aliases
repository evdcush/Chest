# zsh-marks
# =======================
alias g="jump"
alias s="bookmark"
alias d="deletemark"
alias p="showmarks"


# Ascii text print
#=========================
alias ascf="python -m art fonts"
alias asc="python -m art text"

# Misc apps
#=========================
#---- editors
alias st="subl" # open file with sublime
alias stt="subl ." # open dir with sublime

#---- journal
alias jrnl=" jrnl"


# git
#=========================
alias gs="git status"
alias gd="git diff"
alias ga="git add"
alias gau="git add -u"
alias gaa="git add -A"
alias gcm="git commit -m"
alias gcam="git commit -a -m"
alias gcampu="git commit -a -m $1 origin master"
alias gcamd="git commit --amend --no-edit"
alias gcn="git clone"
alias gpull="git pull"
alias gpush="git push"
alias gsize="git rev-list --objects --all \
| git cat-file --batch-check='%(objecttype) %(objectname) %(objectsize) %(rest)' \
| sed -n 's/^blob //p' \
| sort --numeric-sort --key=2 \
| cut -c 1-12,41- \
| numfmt --field=2 --to=iec-i --suffix=B --padding=7 --round=nearest"


# git hoarding
#=========================
alias hurl="echo $1 >> $HOME/Projects/Hoarded/inbox.txt"
alias hoard_now="python $HOME/Projects/Hoarded/clone_urls.py"

